            <button type="button" id="minimizeButton">Close...</button>
        </div>
    <div>
</div>

<script> 
    import { isName, isMessageFlag } from "../../states/globalState.js";

    document.getElementById('maximizedText').style.display = 'none';
    document.getElementById('maximizedButtons').style.display = 'none';
    document.getElementById('maximizeButton').style.display = 'block';
    
    function setMaxmizedButtons() {
        document.getElementById('minimizedText').style.display = 'none';
        document.getElementById('maximizedText').style.display = 'block';
        document.getElementById('maximizedButtons').style.display = 'block';
        document.getElementById('maximizeButton').style.display = 'none';
    }

    function setMinimizeButtons() {
        document.getElementById('minimizedText').style.display = 'block';
        document.getElementById('maximizedText').style.display = 'none';
        document.getElementById('maximizedButtons').style.display = 'none';
        document.getElementById('maximizeButton').style.display = 'block';
    }

    isMessageFlag.subscribe( flag => {
        if(flag == 0)
            document.getElementById('secondMainText').style.display = 'none';
        else if(flag == 1){
            document.getElementById('secondMainText').style.display = 'block';
        }
        else if(flag == 2){
            document.getElementById('secondMainText').style.display = 'block';
            
        }
    });

    isName.subscribe (name => {
        document.getElementById('nameText').innerText = name + "!";
    })

    document.getElementById('maximizeButton').addEventListener('click', setMaxmizedButtons);
    document.getElementById('minimizeButton').addEventListener('click', setMinimizeButtons);
</script>